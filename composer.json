{
    "name": "shoman4eg/moy-nalog",
    "description": "An unofficial wrapper client for lknpd.nalog.ru API",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "api",
        "nalog.ru",
        "lknpd.nalog.ru"
    ],
    "authors": [
        {
            "name": "Artem Dubinin",
            "email": "artem@dubinin.me"
        }
    ],
    "funding": [
        {
            "type": "other",
            "url": "https://www.tinkoff.ru/cf/7rZnC7N4bOO"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-json": "*",
        "ext-mbstring": "*",
        "brick/math": "^0.14",
        "php-http/client-common": "^2.7",
        "php-http/discovery": "^1.19",
        "php-http/logger-plugin": "^1.4",
        "php-http/message": "^1.16",
        "php-http/promise": "^1.3",
        "psr/http-client": "^1.0.3",
        "psr/log": "^3.0",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "guzzlehttp/guzzle": "^7.8",
        "guzzlehttp/psr7": "^2.6",
        "nyholm/nsa": "^1.3",
        "php-http/guzzle7-adapter": "^1.0",
        "phpunit/phpunit": "^11.4"
    },
    "suggest": {
        "psr/http-client-implementation": "Required for using this package",
        "psr/log-implementation": "Require for logging"
    },
    "autoload": {
        "psr-4": {
            "Shoman4eg\\Nalog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shoman4eg\\Nalog\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "php-http/discovery": true
        },
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "forward-command": true,
            "target-directory": "tools"
        }
    },
    "scripts": {
        "analyse-deps": "tools/composer-dependency-analyser/vendor/bin/composer-dependency-analyser",
        "check": [
            "@composer fixcs -- --dry-run",
            "@composer rector -- --dry-run",
            "@phpstan",
            "@composer validate",
            "@composer normalize --dry-run",
            "@analyse-deps",
            "@test"
        ],
        "fixcs": "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix --diff --verbose",
        "infection": "tools/infection/vendor/bin/infection --show-mutations",
        "normalize": "@composer bin composer-normalize normalize --diff ../../composer.json",
        "phpstan": "tools/phpstan/vendor/bin/phpstan analyze --memory-limit=-1",
        "pre-command-run": "mkdir -p var",
        "psalm": "tools/psalm/vendor/bin/psalm --show-info --no-diff --no-cache",
        "rector": "tools/rector/vendor/bin/rector process",
        "test": "phpunit"
    }
}
